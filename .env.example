# MongoDB Atlas Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/vitaflow?retryWrites=true&w=majority
DATABASE_NAME=vitaflow

# JWT Configuration
SECRET_KEY=generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
GEMINI_API_KEY=your-gemini-api-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=vitaflow-images

# Redis Configuration (for caching and rate limiting)
# Options: DigitalOcean Managed Redis, Upstash, Redis Cloud, or local
REDIS_URL=redis://default:password@your-redis-host:25061
# Optional: separate password if using connection string without auth
REDIS_PASSWORD=

# Environment
ENV=production
DEBUG=False

# CORS (comma-separated origins for production)
# CORS_ORIGINS=https://vitaflow.fitness,https://www.vitaflow.fitness

# Note: On DigitalOcean App Platform, configure these as App-level Environment Variables.

